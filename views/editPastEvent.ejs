<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Past Event</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            margin: 0;
            padding: 0;
            background-color: #2e9a8f;
        }
        .container {
            max-width: 600px;
            margin: 50px auto;
            background: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, .2);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        form {
            display: flex;
            flex-direction: column;
        }
        label {
            margin-top: 10px;
            font-weight: bold;
        }
        .required {
            color: red;
        }
        input, select, button {
            margin-top: 5px;
            padding: 10px;
            font-size: 16px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }
        button {
            color: white;
            border: none;
            padding: 10px 40px;
            border-radius: 5px;
            cursor: pointer;
            align-self: center;
        }
        .cancel-button {
            background-color: gray;
            margin-right: 10px;
        }
        .cancel-button:hover {
            background-color: #555;
        }
        .save-button {
            background-color: black;
        }
        .save-button:hover {
            background-color: #333;
        }
        .button-container {
            display: flex;
            justify-content: space-between;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Edit Past Event</h1>
        <form action="/editPastEvent/<%= event.past_event_id %>" method="POST">
            <!-- Organization -->
            <label for="organization">Organization <span class="required">*</span></label>
            <input type="text" id="organization" name="organization" value="<%= event.organization %>" required>
 
            <!-- Event Location -->
            <label for="address1">Address Line 1 <span class="required">*</span></label>
            <input type="text" id="address1" name="address1" value="<%= event.address1 %>" required>
 
            <label for="address2">Address Line 2</label>
            <input type="text" id="address2" name="address2" value="<%= event.address2 %>">
 
            <label for="city">City <span class="required">*</span></label>
            <input type="text" id="city" name="city" value="<%= event.city %>" required>
 
            <label for="state">State <span class="required">*</span></label>
            <select id="state" name="state" required>
                <option value="" disabled>Select your state</option>
                <% ['AL', 'AK', 'AZ', 'AR', 'CA', 'CO', 'CT', 'DE', 'FL', 'GA', 'HI', 'ID', 'IL', 'IN', 'IA', 'KS', 'KY', 'LA', 'ME', 'MD', 'MA', 'MI', 'MN', 'MS', 'MO', 'MT', 'NE', 'NV', 'NH', 'NJ', 'NM', 'NY', 'NC', 'ND', 'OH', 'OK', 'OR', 'PA', 'RI', 'SC', 'SD', 'TN', 'TX', 'UT', 'VT', 'VA', 'WA', 'WV', 'WI', 'WY'].forEach(state => { %>
                    <option value="<%= state %>" <%= event.state === state ? 'selected' : '' %>><%= state %></option>
                <% }); %>
            </select>
 
            <label for="zip">Postal Code <span class="required">*</span></label>
            <input type="text" id="zip" name="zip" value="<%= event.zip %>" required>
 
            <!-- Event Details -->
            <label for="actual-date">Actual Date <span class="required">*</span></label>
            <input type="date" id="actual-date" name="actual_date" value="<%= new Date(event.actual_date).toISOString().split('T')[0] %>" required>
 
            <label for="actual-time">Actual Time <span class="required">*</span></label>
            <input type="time" id="actual-time" name="actual_time" value="<%= event.actual_time %>" required>
 
            <label for="actual-duration">Actual Duration (in hours) <span class="required">*</span></label>
            <input type="number" id="actual-duration" name="actual_duration" value="<%= event.actual_duration %>" min="0.1" step="0.1" required>
 
            <label for="num-participants">Number of Participants <span class="required">*</span></label>
            <input type="number" id="num-participants" name="num_participants" value="<%= event.num_participants %>" required>
 
            <label for="num-pockets">Number of Pockets</label>
            <input type="number" id="num-pockets" name="num_pockets" value="<%= event.num_pockets %>">
 
            <label for="num-collars">Number of Collars</label>
            <input type="number" id="num-collars" name="num_collars" value="<%= event.num_collars %>">
 
            <label for="num-envelopes">Number of Envelopes</label>
            <input type="number" id="num-envelopes" name="num_envelopes" value="<%= event.num_envelopes %>">
 
            <label for="num-incomplete-vests">Number of Incomplete Vests</label>
            <input type="number" id="num-incomplete-vests" name="num_incomplete_vests" value="<%= event.num_incomplete_vests %>">

            <label for="num-complete-vests">Number of Complete Vests</label>
            <input type="number" id="num-complete-vests" name="num_complete_vests" value="<%= event.num_complete_vests %>">
 
 
            <!-- Buttons -->
            <div class="button-container">
                <button type="button" class="cancel-button" onclick="window.history.back()">Cancel</button>
                <button type="submit" class="save-button">Save Changes</button>
            </div>
        </form>
    </div>
</body>
</html>