    <script>
        // Open the delete modal
        function openDeleteModal(eventId) {
            const modal = document.getElementById("deleteModal");
            modal.style.display = "block";

            // Pass the event ID to the confirm button for deletion
            const confirmButton = document.getElementById("confirmDeleteButton");
            confirmButton.setAttribute("data-event-id", eventId);
        }

        // Close the delete modal
        function closeDeleteModal() {
            const modal = document.getElementById("deleteModal");
            modal.style.display = "none";
        }

        // Handle the delete action
        function deleteEvent() {
            const confirmButton = document.getElementById("confirmDeleteButton");
            const eventId = confirmButton.getAttribute("data-event-id");

            // Send an AJAX request to delete the event
            fetch(`/deleteEvent/${eventId}`, { method: "DELETE" })
                .then(response => {
                    if (response.ok) {
                        closeDeleteModal();

                        // Optionally, refresh the page or update the UI
                        location.reload();
                    } else {
                        alert("Failed to delete the event.");
                    }
                })
                .catch(error => {
                    console.error("Error deleting event:", error);
                    alert("An error occurred. Please try again.");
                });
        }

    </script>




