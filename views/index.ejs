        }
 
        .logout-close-button {
            position: absolute;
            /* Place close button inside modal */
            top: 10px;
            right: 15px;
            font-size: 20px;
            font-weight: bold;
            color: #333;
            cursor: pointer;
            background: none;
            border: none;
        }
 
